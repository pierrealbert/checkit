function getMetroShadowStr($color) {
    $r = hexdec(substr($color,0,2));
    $g = hexdec(substr($color,2,2));
    $b = hexdec(substr($color,4,2));
    $Y = ($r+$r+$b+$g+$g+$g)/6;

    $r = round($r * 0.6);
    $g = round($g * 0.6);
    $b = round($b * 0.6);
    return 'rgba('.$r.', '.$g.', '.$b.', 0.9)';
}

