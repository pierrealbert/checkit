<script type="text/javascript">
    window.showMapsStep1 = function(){
        var cord = new google.maps.LatLng(<?=$this->property->latitude?>, <?=$this->property->longitude?>);
        var mapOptions = {
            zoom: 15,
            center: cord,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        }
        var map = new google.maps.Map(document.getElementById("modalMap"), mapOptions);

        var marker = new google.maps.Marker({
            position: cord,
            map: map,
            title: '<?=$this->property->address?>, <?=$this->property->city?> <?=$this->property->postcode?>',
            icon: '/assets/images/btn-carte-location-red-shadow.png'
        });

        $('#modalMap').show();
    }
</script>
