<div class="modal-map-wrapper">
    <h2><?=$this->property->address?>, <?=$this->property->city?> <?=$this->property->postcode?></h2>
    <div style="width: 678px; height: 398px; margin: 0px; background-color: #4d4d4d;" id="modalMap"></div>
    <a class="btn btn-blue map-wide-btn" href="<?=$this->url(array('controller' => 'property', 'action' => 'detail', 'item' => $this->property->id), null, true)?>">Voir l'anonnce</a>
